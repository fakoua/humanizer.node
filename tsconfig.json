{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": [
            "mocha",
            "node"
        ],
        "lib": [
            "ES2018",
            "ES2019"
        ]
    },
    "include": [
        "./**/*"
    ]
}